{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "./dist/",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "paths": {
      "ui/*": [
        "packages/ui/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "./apps/**/node_modules",
    "./packages/**/node_modules"
  ]
}
